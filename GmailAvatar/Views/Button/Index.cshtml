@model List<GmailAvatar.Models.ButtonModel>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div>
        <h1>@Html.Label("Colé")</h1>
        
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 384 384" style="height: 384px">
            <g id="base">
                <circle id="cabecaBase" class="cbc" cx="191.5" cy="144.5" r="72.5" />
                <path id="corpoBase" class="crp" d="M101 261a52.8 52.8 0 0 0-29 47v89H312V308a51.8 51.8 0 0 0-29-47 201.8 201.8 0 0 0-91-21C159.4 240 129.2 246.9 101 261Z" />
            </g>
        </svg>

       @using (Html.BeginForm("HandleButtonClick", "Button"))
        {
            for (int i = 0; i < Model.Count; i++)
            {
                <button type="submit" name="mine" value=@i>
                    @if (Model[i].State == true)
                     {
                         <p>a</p>
                     }
                     else
                     {
                         <p>b</p>
                     }
                </button>
            }
        }

    </div>
</body>
</html>
